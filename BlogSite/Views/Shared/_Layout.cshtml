                                        <li>
                                            <a href="#">Alışveriş</a>
                                        </li>
                                        <li>
                                            @Html.Action("Authors","Home")
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- mobile-menu-area-end -->
        </div>
    </header>
    <!-- header-end -->
    <!-- page-header-area-start -->
    <div class="page-header-area ptb-140">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header-text text-center text-white">
                        <h2 class="page-title">Lifestyle</h2>
                        <ul class="breadcrumb">
                            <li><a href="#">Home</a></li>
                            <li class="active"><span>Lifestyle</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
