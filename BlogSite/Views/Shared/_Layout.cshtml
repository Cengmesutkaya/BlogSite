    <header>
        <div class="header-area white-bg" id="main_h">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-8">
                        <div class="logo">
                            <a href="@Url.Action("","")"><img src="@Url.Content("/Content/img/logo.png")" alt="" /></a>
                        </div>
                    </div>
                    <div class="col-lg-7 hidden-sm hidden-xs col-md-7">
                        <div class="mainmenu">
                            <nav>
                                <ul>
                                    <li class="active">
                                        <a href="@Url.Action("","")">Anasayfa</a>
                                    </li>
                                    <li>
